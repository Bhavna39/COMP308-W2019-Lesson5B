 <% include ../partials/header.ejs %>

    <!-- embed content here -->
    <div class="container">
        <div class="row">
            <div class="col-md-offsetr-3 col-md-8">

                        <h1><%= title %></h1>
                        <a class="btn btn-primary" href="/contact-list/add" role="button">
                        <i class="fa fa-plus-circle"></i>Add a Contact</a> 
                        <br>
                        <table class="table table-bordered table-striped table-hover">
                           <!-- Header Row -->
                            <tr>
                                <th class="text-center">Favourite Thing</th>
                                <th class="text-center">Description</th>
                                <th class="text-center"></th>
                                <th class="text-center"></th>
                            </tr>

                            <!-- Repeatable Template Row-->
                            <% for(let count = 0; count < contactList.length; count++) { %>
                             <tr>
                                 <td class="text-center"><%= contactList[count].Name %></td>
                                 <td class="text-center"><%= contactList[count].Description %></td>
                                 
                                 <td class="text-center">
                                 <a href="/contact-list/edit/<%= contactList[count]._id %>" 
                                 class="btn btn-primary"><i class="fa fa-edit"></i> Edit</a>
                                 </td>

                                 <td class="text-center">
                                 <a href="/contact-list/delete/<%= contactList[count]._id %>" 
                                 class="btn btn-danger"><i class="fa fa-trash"></i> Delete</a>
                                 </td>
                             </tr>
                            <% } %>
                        </table>


            </div>
        </div>
    </div>

 <% include ../partials/footer.ejs %>